# Auto detect text files and perform LF normalization
* text=auto

# Python files
*.py text diff=python eol=lf
*.pyw text diff=python eol=lf

# Config files
*.ini text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.json text eol=lf

# Documentation
*.md text diff=markdown eol=lf
*.txt text eol=lf

# Templates
*.mako text eol=lf
*.template text eol=lf

# Windows-specific files
*.bat text eol=crlf
*.cmd text eol=crlf